@page
@model D20Market.Pages_Characters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Character.CharacterId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Character.Race" class="control-label"></label>
                <input asp-for="Character.Race" class="form-control" />
                <span asp-validation-for="Character.Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Character.Class" class="control-label"></label>
                <input asp-for="Character.Class" class="form-control" />
                <span asp-validation-for="Character.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Level" class="control-label"></label>
                <input asp-for="Character.Level" class="form-control" />
                <span asp-validation-for="Character.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Strength" class="control-label"></label>
                <input asp-for="Character.Strength" class="form-control" />
                <span asp-validation-for="Character.Strength" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Dexterity" class="control-label"></label>
                <input asp-for="Character.Dexterity" class="form-control" />
                <span asp-validation-for="Character.Dexterity" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Constitution" class="control-label"></label>
                <input asp-for="Character.Constitution" class="form-control" />
                <span asp-validation-for="Character.Constitution" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Intelligence" class="control-label"></label>
                <input asp-for="Character.Intelligence" class="form-control" />
                <span asp-validation-for="Character.Intelligence" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Wisdom" class="control-label"></label>
                <input asp-for="Character.Wisdom" class="form-control" />
                <span asp-validation-for="Character.Wisdom" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Charisma" class="control-label"></label>
                <input asp-for="Character.Charisma" class="form-control" />
                <span asp-validation-for="Character.Charisma" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.Backstory" class="control-label"></label>
                <input asp-for="Character.Backstory" class="form-control" />
                <span asp-validation-for="Character.Backstory" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.ImageUrl" class="control-label"></label>
                <input asp-for="Character.ImageUrl" class="form-control" />
                <span asp-validation-for="Character.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Character.IsPublic" /> @Html.DisplayNameFor(model => model.Character.IsPublic)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="Character.PlayerId" class="control-label"></label>
                <select asp-for="Character.PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                <span asp-validation-for="Character.PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
